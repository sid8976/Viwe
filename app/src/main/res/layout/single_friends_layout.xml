<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_friend_dp"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/single_friend_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/single_friend_status"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/single_friend_dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single_friend_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/single_friend_dp"
        android:layout_alignStart="@+id/single_friend_name"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:textStyle="italic" />
</RelativeLayout>